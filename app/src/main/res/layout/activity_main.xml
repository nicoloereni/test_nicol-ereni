<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_textView"
        android:text="@string/main_title"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/user_name_editText"
        android:inputType="textPersonName"
        android:hint="@string/username"
        android:ems="10"
        android:layout_below="@+id/title_textView"
        style="@style/edit_text"
        />

    <EditText
        android:id="@+id/repo_name_editText"
        android:hint="@string/repository_name"
        android:layout_alignEnd="@+id/user_name_editText"
        android:layout_alignStart="@+id/user_name_editText"
        android:layout_below="@+id/user_name_editText"
        android:singleLine="true"
        android:imeOptions="actionDone"
        style="@style/edit_text"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find"
        android:id="@+id/find_stargazers_button"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/repo_name_editText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
